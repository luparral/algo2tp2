# Compilador que ser치 utilizado
CC=g++

# flags de compilaci칩n
CFLAGS=-g -Wall

# flags de linkeo
LDFLAGS=

# Agregar ac치 los archivos .cpp a compilar
SOURCES= titulo.cpp promesa.cpp conjEstNat.cpp wolfie.cpp Driver.cpp test.cpp 

# Objetos que ser치n generados (no tocar)
OBJECTS=$(SOURCES:.cpp=.o)

# Nombre del ejecutable a generar
EXECUTABLE=test

all: $(SOURCES) $(EXECUTABLE)
	
$(EXECUTABLE): $(OBJECTS) 
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@

clean:
	rm -rf $(EXECUTABLE) $(OBJECTS)

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@
